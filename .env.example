# Environment Variables for WhatsApp Bot
# Copy this file to .env and fill in your actual values

# Twilio Credentials (Get from: https://console.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Twilio WhatsApp Number (Get from: https://console.twilio.com/us1/develop/sms/settings/whatsapp-sandbox)
# Format: whatsapp:+14155238886 (for sandbox) or your registered WhatsApp number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Google Gemini API Key (Get from: https://makersuite.google.com/app/apikey)
# This enables AI-powered responses for general questions
GEMINI_API_KEY=your_gemini_api_key_here

# Admin Token (Create your own secret token for admin operations)
# This is used to protect the admin_update.py script
ADMIN_TOKEN=your-secure-secret-token-here

# Flask Environment
FLASK_ENV=development

# Port (default: 5000, cloud platforms may override this)
PORT=5000
